{
  "name": "postgres-mcp",
  "version": "1.0.0",
  "description": "MCP server for PostgreSQL database management and operations",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "npx tsx scripts/test-connection.ts",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:queries": "npx tsx scripts/test-queries.ts",
    "verify-build": "npx tsx scripts/verify-build.ts",
    "verify": "npm run verify-build",
    "watch": "tsc -w --preserveWatchOutput",
    "lint": "eslint \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "lint:check": "npm run lint",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "mcp",
    "postgresql",
    "database",
    "sql",
    "ai-agents"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/ws": "^8.18.1",
    "dotenv": "^16.6.1",
    "pg": "^8.12.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "joi": "^17.13.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3"
  }
}
